@model Flight_UI.Models.FlightModel

@{
    ViewData["Title"] = "Sale flight";
}

<h1 class="mt-5">Comprar vuelo</h1>

<br />

<div id="accordion">
    <div class="card">

        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Detalle del vuelo
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <div class="row">
                    <div class="col-3">
                        <label>Origen</label>
                        <input type="text" class="form-control" id="txtOrigin" asp-for="DepartureStation" disabled placeholder="Origen" />
                    </div>
                    <div class="col-3">
                        <label>Destino</label>
                        <input type="text" class="form-control" id="txtDestination" asp-for="ArrivalStation" disabled placeholder="Destino" />
                    </div>
                    <div class="col-3">
                        <label>Fecha y hora</label>
                        <input type="text" class="form-control" id="txtDate" asp-for="DepartureDate" disabled />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-3">
                        <label>Precio</label>
                        <input type="text" class="form-control" id="txtPrice" asp-for="Price" placeholder="Origen" disabled />
                    </div>
                    <div class="col-3">
                        <label>Moneda</label>
                        <input type="text" class="form-control" id="txtCurrency" asp-for="Currency" placeholder="Destino" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Pasajeros
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <input type="text" class="form-control" id="txtFirstName" placeholder="Nombres" />
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" id="txtLastName" placeholder="Apellidos" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-4">
                        <input type="text" class="form-control" id="txtPhone" placeholder="Teléfono" />
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" id="txtEmail" placeholder="Correo electrónico" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary" id="btnAdd">Agregar pasajero</button>
                    </div>
                </div>
                <br />
                <br />
                <div class="col-12">
                    <table class="table" id="tableClient">
                        <thead>
                            <tr>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Telefono</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="float-right">
    <button class="btn btn-primary btn-lg" id="btnCheckOut">Confirmar compra</button>
</div>
<br />
<br />
<br />
@section Scripts
{
    <script src="~/js/SaleFlight.js" asp-append-version="true"></script>
}



